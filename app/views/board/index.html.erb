
<h1>Main Page</h1>
<a href="/board/new">글쓰러가기</a>
<br /><br />
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">작성자</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
    </tr>
  </thead>
  <tbody>
    <% @board.each do |b| %>
    <tr>
      <th scope="row"><%=b.id%></th>
      <td><%=b.user%></td>
      <td><a href="/board/show/<%=b.id%>"><%=b.title%></a></td>
      <td><%=b.content%></td>
    </tr>
    <% end %>

  </tbody>
</table>
