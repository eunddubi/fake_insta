
<h1><i class="fas fa-book"></i>  Main Page</h1>
<br /><br />
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">작성자</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th scope="col">수정</th>
      <th scope="col">삭제</th>
    </tr>
  </thead>
  <tbody>
    <% @board.each do |b| %>
    <tr>
      <th scope="row"><%=b.id%></th>
      <td><%=b.user%></td>
      <td><a href="/board/<%=b.id%>"><%=b.title%></a></td>
      <td><%=b.content%></td>
      <td><img src="<%=b.postimage%>"></td>
      <td><a href="/board/<%=b.id%>/edit"><i class="fas fa-edit"></i></a></td>
      <td><a href="/board/<%=b.id%>" data-method="delete" data-confirm="정말로 삭제하시겠습니까?"><i class="fas fa-times"></i></a></td>
    </tr>
    <% end %>

  </tbody>
</table>
